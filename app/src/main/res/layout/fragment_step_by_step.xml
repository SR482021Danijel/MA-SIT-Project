<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StepByStepFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TableRow>

            <TextView
                android:text="@string/test_long"
                android:id="@+id/step_by_stepTextView1"
                style="@style/txtViewAssociation1" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/step_by_stepTextView2"
                style="@style/txtViewAssociation1"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/step_by_stepTextView3"
                style="@style/txtViewAssociation1"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/step_by_stepTextView4"
                style="@style/txtViewAssociation1"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/step_by_stepTextView5"
                style="@style/txtViewAssociation1"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/step_by_stepTextView6"
                style="@style/txtViewAssociation1"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/step_by_stepTextView7"
                style="@style/txtViewAssociation1"/>

        </TableRow>

        <TableRow android:gravity="center">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/step_by_stepTextView_points_left"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    style="@style/txtViewAssociation2" />
                <TextView
                    android:id="@+id/step_by_stepTextView_answer"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    style="@style/txtViewAssociation2" />
                <TextView
                    android:id="@+id/step_by_stepTextView_points_right"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    style="@style/txtViewAssociation2" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</FrameLayout>