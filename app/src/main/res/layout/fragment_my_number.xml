            android:text="*">

        </Button>

        <Button
            android:id="@+id/symbol_divide"
            style="@style/number_game_numbers"
            android:text="/">

        </Button>

        <Button
            android:id="@+id/delete"
            style="@style/number_game_numbers"
            android:layout_column="2"
            android:text="del">

        </Button>

    </GridLayout>

