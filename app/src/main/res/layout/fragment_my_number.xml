    <TextView
        android:id="@+id/number_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:background="@color/purple_500"
        android:padding="5sp"
        android:text="\?">

    </TextView>


    <TextView
