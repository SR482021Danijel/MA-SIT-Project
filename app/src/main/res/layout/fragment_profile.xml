<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewUserPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/textViewFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="First Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Last Name"
            android:textSize="30sp" />

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/userNameText"
                android:text="User Name:"
                style="@style/textViewProfile">

            </TextView>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/userName"
                android:text="Pera"
                style="@style/textViewAmountProfile">

            </TextView>


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/emailText"
                android:text="Email:"
                style="@style/textViewProfile">

            </TextView>

            <TextView
                android:id="@+id/email"
                android:text="asdf@dsafe.com"
                style="@style/textViewAmountProfile">

            </TextView>

        </TableRow>

        <TableRow>
            <TextView
                android:text="Statistika:"
                android:textSize="30dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:text="Ko zna zna:"
                    android:textSize="20dp"
                    android:gravity="center"/>

            <TextView
                android:id="@+id/textViewKoZnaZna"
                android:layout_width="38dp"
                android:textSize="20dp"
                android:layout_weight="1" />

            <TextView
                android:gravity="center"
                android:text="Asocijacije: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewAsocijacije"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="10sp"
                android:width="40sp"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:text="Spojnice:"
                    android:textSize="20dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textViewSpojnice"
                    android:textSize="20dp"
                    android:layout_weight="1"/>

                <TextView
                    android:text="Skocko:"
                    android:textSize="20dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textViewSkocko"
                    android:textSize="20dp"
                    android:layout_marginRight="10sp"/>
            </TableRow>

        <TableRow android:layout_marginTop="15dp">
            <TextView
                android:text="Partije:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewPartije"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <TextView
                android:text="KpK:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewKorakPoKorak"
                android:textSize="20dp"
                android:layout_marginRight="10sp"/>
        </TableRow>

        <TableRow android:layout_marginTop="15dp">
            <TextView
                android:text="Pobedjene:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewPobedjene"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Moj Broj:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewMojBroj"
                android:textSize="20dp"
                android:layout_marginRight="10sp"/>
        </TableRow>

        <TableRow android:layout_marginTop="15dp">
            <TextView
                android:text="Izgublene:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewIzgubljene"
                android:textSize="20dp"
                android:layout_weight="1"/>
        </TableRow>

    </TableLayout>


</androidx.appcompat.widget.LinearLayoutCompat>