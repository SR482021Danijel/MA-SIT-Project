<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewUserPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/textViewFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="First Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Last Name"
            android:textSize="30sp" />

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/userName"
                android:text="User Name:"
                style="@style/textViewProfile">

            </TextView>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/userNameValue"
                android:text="Pera"
                style="@style/textViewAmountProfile">

            </TextView>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/email"
                android:text="Email:"
                style="@style/textViewProfile">

            </TextView>

            <TextView
                android:id="@+id/emailValue"
                android:text="asdf@dsafe.com"
                style="@style/textViewAmountProfile">

            </TextView>

        </TableRow>

        <TableRow>
            <TextView
                android:text="Statistika:"
                android:textSize="30dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="20dp">
            <TextView
                android:text="Bodovi:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView android:text="10"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="15dp">
            <TextView
                android:text="Partije:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView android:text="10"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="15dp">
            <TextView
                android:text="Pobedjene:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:text="10"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </TableRow>

        <TableRow android:layout_marginTop="15dp">
            <TextView
                android:text="Izgublene:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView android:text="10"
                android:textSize="20dp"/>
        </TableRow>

    </TableLayout>


</androidx.appcompat.widget.LinearLayoutCompat>